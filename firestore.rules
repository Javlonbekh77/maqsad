
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read all user profiles, but only update their own.
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read groups, tasks, and meetings.
    // Write access should be handled by secure server-side logic (Cloud Functions) later.
    match /groups/{groupId} {
      allow read: if true;
      allow write: if false; // Secure by default
    }

    match /tasks/{taskId} {
      allow read: if true;
      allow write: if false; // Secure by default
    }

    match /meetings/{meetingId} {
        allow read: if true;
        allow write: if false; // Secure by default
    }
  }
}
